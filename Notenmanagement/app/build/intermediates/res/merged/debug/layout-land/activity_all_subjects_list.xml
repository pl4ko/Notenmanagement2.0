    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="at.htlbraunau.notenmanagement.FragmentActivity.AllSubjectsActivity">

    <fragment class="at.htlbraunau.notenmanagement.FragmentActivity.AllSubjectsFragment"
        android:id="@+id/subject_list"
        android:layout_weight="1"
        android:layout_width="0px"
        android:layout_height="match_parent"
        tools:layout="@layout/list_item_subjectswithassessments"/>

    <FrameLayout
        android:id="@+id/details_marks"
        android:layout_weight="7"
        android:layout_width="0px"
        android:layout_height="match_parent" />


